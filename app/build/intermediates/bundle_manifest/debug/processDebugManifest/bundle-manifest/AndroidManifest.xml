<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.samuelhermosilla98.gamestoreapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gmail.samuelhermosilla98.gamestoreapp.Views.SobreAppCRUD"
            android:label="@string/title_activity_sobre_app_crud"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gmail.samuelhermosilla98.gamestoreapp.Views.Buscar"
            android:label="@string/title_activity_buscar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gmail.samuelhermosilla98.gamestoreapp.Views.ListadoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_listado"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gmail.samuelhermosilla98.gamestoreapp.Views.FormularioActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_formulario"
            android:parentActivityName="com.gmail.samuelhermosilla98.gamestoreapp.Views.ListadoActivity"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gmail.samuelhermosilla98.gamestoreapp.Views.LogoActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>