<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.samuelhermosilla98.gamestoreapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".Views.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.SobreAppCRUDActivity"
            android:label="@string/title_activity_sobre_app_crud"
            android:parentActivityName=".Views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.BuscarActivity"
            android:label="@string/title_activity_buscar"
            android:parentActivityName=".Views.ListadoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.ListadoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_listado"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.FormularioActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_formulario"
            android:parentActivityName=".Views.ListadoActivity"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.LogoActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>